{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/url-loader"
    ]
  },
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "changelog": "lerna-changelog",
    "contributors": "all-contributors generate",
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "type-check": "lerna run type-check",
    "lint": "eslint . --ext js,ts,tsx",
    "dev": "lerna exec --scope @pulsar-ui/core -- npm run dev",
    "build": "lerna exec --scope @pulsar-ui/* --concurrency 1 -- npm run build",
    "build:clean": "lerna exec --scope @pulsar-ui/* -- npm run build:clean",
    "website": "lerna exec --scope website -- npm run start",
    "website:build": "lerna exec --scope website -- npm run build",
    "release": "lerna publish --conventional-commits --reject-cycles --allow-branch master",
    "release:next": "npm run release -- --npm-tag=next --preid=beta"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/src/**/*.(ts|tsx)": [
      "prettier --list-different"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.4.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.1.0",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@namics/eslint-config": "6.1.0",
    "@storybook/addon-actions": "4.1.11",
    "@storybook/addon-links": "4.1.11",
    "@storybook/addons": "4.1.11",
    "@storybook/react": "4.1.11",
    "@types/jest": "24.0.6",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@typescript-eslint/eslint-plugin": "1.3.0",
    "@typescript-eslint/parser": "1.3.0",
    "all-contributors-cli": "6.1.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.1.0",
    "babel-loader": "8.0.5",
    "babel-plugin-dev-expression": "0.2.1",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "commitizen": "3.0.7",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.9.1",
    "eslint": "5.13.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "jest-dom": "3.1.1",
    "jest-emotion": "10.0.10",
    "lerna": "3.10.7",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.1.4",
    "lodash": "4.17.11",
    "prettier": "1.16.4",
    "react": "16.8.1",
    "react-dom": "16.8.1",
    "react-test-renderer": "16.8.1",
    "react-testing-library": "6.0.0",
    "rollup": "1.1.2",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-ignore": "1.0.5",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-uglify": "6.0.2",
    "typescript": "3.3.3"
  },
  "resolutions": {
    "@types/react": "^16.8.2"
  }
}
